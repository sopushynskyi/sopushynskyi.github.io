gem "google-protobuf", "~> 3.23.4"

# Якщо хочеш використовувати ті самі залежності, що й GitHub Pages:
# gem "github-pages", group: :jekyll_plugins

# Плагіни Jekyll (опційно)
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
end